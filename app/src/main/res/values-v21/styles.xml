<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OTRTheme" parent="@style/Theme.AppCompat"/>

    <style name="OTRThemeNoActionBar" parent="@style/Theme.AppCompat.NoActionBar"/>

    <style name="light_blue_text_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/otr_9_patch_text_field_dark</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_weight">3</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="dark_blue_input_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/otr_9_patch_input_field_light</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@android:color/background_dark</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">#3e9dd9</item>
        <item name="android:colorControlActivated">#3e9dd9</item>
    </style>
</resources>