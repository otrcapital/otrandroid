<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/truck_bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding_logo_top"
        android:src="@drawable/otr_logo" />

    <Button
        android:id="@+id/verifyButton"
        style="@style/ButtonBlue_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_confirm_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:minWidth="60dp"
        android:text="Verify" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_double"
        android:paddingRight="@dimen/padding_double">

        <LinearLayout
            android:id="@+id/companyGroup"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_edit_text"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="@dimen/padding_double"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:background="@drawable/otr_9_patch_text_field_dark"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:minHeight="43dp"
                android:minLines="2"
                android:paddingLeft="8dp"
                android:paddingRight="4dp"
                android:text="Broker name:"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <AutoCompleteTextView
                    android:id="@+id/brokerNameET"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/otr_9_patch_input_field_light"
                    android:dropDownWidth="match_parent"
                    android:lines="1"
                    android:linksClickable="false"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:textColor="@android:color/background_dark"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/textClearImgBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="#00000000"
                    android:clickable="true"
                    android:src="@drawable/cancel_button"
                    android:visibility="invisible" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mcNumberGroup"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_edit_text"
            android:layout_below="@+id/companyGroup"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                style="@style/light_blue_text_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="2"
                android:maxLines="1"
                android:text="MC number:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/mcNumberET"
                style="@style/dark_blue_input_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>