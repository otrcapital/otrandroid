<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/truck_bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/otr_logo_small" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:layout_above="@+id/factorLoadButton"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/factorLoadButton"
        style="@style/ButtonBlue_btn"
        android:layout_width="200dp"
        android:layout_height="@dimen/height_confirm_button"
        android:layout_marginBottom="@dimen/padding_double"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/factor_new_load"
        android:textSize="15sp" />

</RelativeLayout>