<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/truck_bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/padding_normal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/otr_logo_small" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="@dimen/padding_triple"
        android:gravity="center"
        android:text="@string/des_load_factor"
        android:textAppearance="?android:attr/textAppearanceListItem" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnLoadFactor"
        android:layout_below="@+id/tvDescription"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="@dimen/padding_double"
        android:divider="#80ffffff"
        android:dividerHeight="1px" />

    <Button
        android:id="@+id/btnLoadFactor"
        style="@style/ButtonBlue_btn"
        android:layout_width="200dp"
        android:layout_height="@dimen/height_confirm_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/padding_triple"
        android:text="@string/factor_new_load" />

</RelativeLayout>